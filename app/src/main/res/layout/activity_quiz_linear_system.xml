<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_determinants1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bulsu.mathpad.activity.quiz.QuizDeterminants1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls1"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb1a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (2, 3) "
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb1b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (-2, 3)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb1c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (3, 2)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb1d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (3, -2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls2"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (1, 3)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (3, 1)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb2c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (3/2, ½)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb2d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (1/2, 3/2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls3"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb3a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (7, 9, 13)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb3b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (7, 13, 9)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb3c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (13, 9, 7)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb3d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (9, 13, 7)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls4"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb4a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (3, 5, -2)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb4b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (-2, 5, 3)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb4c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (-2, 3, 5)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb4d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (3, 5, -2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls5"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (3, -2)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (-2, 3)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb5c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (-3, 2)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb5d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (2, 3)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls6"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb6a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (½, 4)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb6b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (4, ½)"
