                <RadioButton
                    android:id="@+id/rb6c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (-1/2, 4)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb6d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (4, -1/2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls7"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb7a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (2, -3, 7)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb7b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (7, -3, 2)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb7c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (-3, 2, -7) "
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb7d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (-7, -3, 2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls8"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb8a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (7, 9)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb8b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (9, 7) "
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb8c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (-7, 9)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb8d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (9, -7)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls9"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb9a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (4, 7, -2)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (4, -2, 7)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb9c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (-2, 4, 7)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb9d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (7, 4, -2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/quizls10"
                android:textColor="#fff" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb10a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (3, 2, 1)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb10b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (1, 2, 3)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb10c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (2, 3, 1)"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rb10d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. (3, 1, 2)"
                    android:textColor="#fff" />
            </RadioGroup>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
